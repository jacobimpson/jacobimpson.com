<script type="module">
  document.addEventListener("DOMContentLoaded", function () {
    // Initialize blob canvas
    const blobCanvas = document.querySelector(".blob-canvas");
    if (blobCanvas) {
      const blobCtx = blobCanvas.getContext("2d");
      if (blobCtx) {
        initializeBlobAnimation(blobCanvas, blobCtx);
      }
    }

    // Initialize 3D paint blobs
    const fragmentCanvas = document.getElementById("image-fragments");
    if (fragmentCanvas) {
      // The initialize3DPaintBlobs function will be available from the imported script
      if (window.initialize3DPaintBlobs) {
        window.initialize3DPaintBlobs(fragmentCanvas);
      }
    }
  });

  function initializeBlobAnimation(canvas, ctx) {
    let time = 0;
    const colors = ["#1a1a1a", "#2c2c2c", "#404040", "#555555"];

    function noise(x, y, z) {
      return Math.sin(x * 0.01 + z) * Math.cos(y * 0.01 + z) * 0.5 + 0.5;
    }

    function drawBlob() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);

      const centerX = canvas.width / 2;
      const centerY = canvas.height / 2;
      const baseRadius = Math.min(canvas.width, canvas.height) * 0.25;

      for (let layer = 0; layer < 3; layer++) {
        ctx.beginPath();
        const points = 12;
        const angleStep = (Math.PI * 2) / points;

        for (let i = 0; i <= points; i++) {
          const angle = i * angleStep;
          const noiseValue = noise(
            Math.cos(angle) * 100,
            Math.sin(angle) * 100,
            time + layer
          );
          const radiusVariation =
            baseRadius * (0.8 + noiseValue * 0.3 + layer * 0.1);
          const x = centerX + Math.cos(angle) * radiusVariation;
          const y = centerY + Math.sin(angle) * radiusVariation;

          if (i === 0) {
            ctx.moveTo(x, y);
          } else {
            const prevAngle = (i - 1) * angleStep;
            const prevNoiseValue = noise(
              Math.cos(prevAngle) * 100,
              Math.sin(prevAngle) * 100,
              time + layer
            );
            const prevRadiusVariation =
              baseRadius * (0.8 + prevNoiseValue * 0.3 + layer * 0.1);
            const prevX = centerX + Math.cos(prevAngle) * prevRadiusVariation;
            const prevY = centerY + Math.sin(prevAngle) * prevRadiusVariation;
            const cpX = (prevX + x) / 2 + Math.sin(time + i) * 10;
            const cpY = (prevY + y) / 2 + Math.cos(time + i) * 10;
            ctx.quadraticCurveTo(cpX, cpY, x, y);
          }
        }

        ctx.closePath();
        const color = colors[layer % colors.length];
        const alpha = 0.03 - layer * 0.008;
        ctx.fillStyle =
          color +
          Math.floor(alpha * 255)
            .toString(16)
            .padStart(2, "0");
        ctx.fill();
      }

      time += 0.003;
      requestAnimationFrame(drawBlob);
    }

    function resize() {
      const rect = canvas.getBoundingClientRect();
      canvas.width = rect.width;
      canvas.height = rect.height;
    }

    resize();
    window.addEventListener("resize", resize);
    drawBlob();
  }
</script>
